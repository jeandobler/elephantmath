<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ranking_details_n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:layout_marginTop="@dimen/containerMargin"
        android:layout_marginBottom="@dimen/containerMargin"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ranking_details_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ranking_details_n1"
        app:layout_constraintStart_toEndOf="@+id/tv_ranking_details_n1"
        app:layout_constraintTop_toTopOf="@+id/tv_ranking_details_n1" />

    <TextView
        android:id="@+id/tv_ranking_details_n2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ranking_details_n1"
        app:layout_constraintStart_toEndOf="@+id/tv_ranking_details_x"
        app:layout_constraintTop_toTopOf="@+id/tv_ranking_details_n1" />


    <TextView
        android:id="@+id/tv_ranking_details_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:text="@string/equals"
        android:contentDescription="@string/equals"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ranking_details_n1"
        app:layout_constraintStart_toEndOf="@+id/tv_ranking_details_n2"
        app:layout_constraintTop_toTopOf="@+id/tv_ranking_details_n1" />

    <TextView
        android:id="@+id/tv_ranking_details_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:text="@string/result_placeholder"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ranking_details_n1"
        app:layout_constraintStart_toEndOf="@+id/tv_ranking_details_equals"
        app:layout_constraintTop_toTopOf="@+id/tv_ranking_details_n1" />


    <ImageView
        android:id="@+id/tv_ranking_details_correct"
        android:layout_width="@dimen/ic_dimension"
        android:contentDescription="@string/is_this_correct"
        android:layout_height="@dimen/ic_dimension"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:src="@drawable/correct"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ranking_details_n1"
        app:layout_constraintStart_toEndOf="@+id/tv_ranking_details_result"
        app:layout_constraintTop_toTopOf="@+id/tv_ranking_details_n1" />


</androidx.constraintlayout.widget.ConstraintLayout>