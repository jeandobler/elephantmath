<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:padding="@dimen/widget_margin"
    android:id="@+id/view_widget"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/containerMargin"
        android:background="#09C"
        android:contentDescription="@string/widget_lsta_points_label"
        android:text="@string/widget_lsta_points_label"
        android:textColor="#ffffff"
        android:textSize="@dimen/normalText"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/tv_widget2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/containerMargin"
        android:background="#09C"
        android:contentDescription=""
        android:text="@string/widget_last_points"
        android:textColor="#ffffff"
        android:textSize="@dimen/normalText"
        android:textStyle="bold|italic" />


</LinearLayout>