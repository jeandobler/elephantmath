<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_ranking_points"
        android:layout_width="@dimen/points_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:layout_marginTop="@dimen/containerMargin"
        android:layout_marginBottom="@dimen/containerMargin"
        android:contentDescription="@string/how_much_points"
        android:text="@string/points_placeholder"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ranking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:text="@string/ranking_name_placeholder"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ranking_points"
        app:layout_constraintStart_toEndOf="@+id/tv_ranking_points"
        app:layout_constraintTop_toTopOf="@+id/tv_ranking_points" />

    <TextView
        android:id="@+id/tv_ranking_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="@dimen/containerMargin"
        android:text="@string/ranking_date_placeholder"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ranking_points"
        app:layout_constraintStart_toEndOf="@+id/tv_ranking_name"
        app:layout_constraintTop_toTopOf="@+id/tv_ranking_points" />


</androidx.constraintlayout.widget.ConstraintLayout>